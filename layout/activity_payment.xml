<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_arrow_back_ios_maroon" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT DETAILS"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#800000"
            android:textSize="30sp"/>
        <ImageView
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/qr_code"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kindly send the receipt/proof to"
            android:textAlignment="center"
            android:textColor="#800000"
            android:textSize="20sp" />
        <TextView
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mavens Admin at:"
            android:textAlignment="center"
            android:textColor="#800000"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/whatsapp_icon"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="0126671435"
                android:textSize="18sp"
                android:textColor="#800000"
                android:textStyle="bold"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="9dp"/>
        </RelativeLayout>

        <Button
            android:layout_marginTop="-100dp"
            android:id="@+id/buttonCheckOrder"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#800000"
            android:text="CHECK ORDER"
            android:textColor="@color/white"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>